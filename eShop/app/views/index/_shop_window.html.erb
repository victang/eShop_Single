              <br />
              <br />
              <br />
            <!-- Right side is Description - End -->
            </div>
            <a class="close-reveal-modal">&#215;</a>
          </div>
        </div>
        <!-- Sub-page - End -->
      <%# end %>
    </div>
  <% end %>
<% end %>
<!-- Shop window Main Loop - End -->